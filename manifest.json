{
  "manifest_version": 3,
  "name": "Snap Doc â€” Screenshot Collator",
  "version": "1.0.0",
  "description": "Capture multiple screenshots and export them into a single Word document.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Snap Doc"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "libs/docx.min.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
